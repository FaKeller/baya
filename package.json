{
  "name": "baya",
  "version": "0.0.1",
  "description": "Static site generator framework featuring React",
  "directories": {
    "test": "jest"
  },
  "scripts": {
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "build": "rimraf ./dist/ && yarn run ts:build && yarn run ts:lint",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "ts:lint": "tslint -c tslint.json -p tsconfig.json",
    "depcruise": "depcruise --validate .dependency-cruiser.json src"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:mimacom/website/assemblyline.git"
  },
  "author": "Fabian Keller <fabian.keller@mimacom.com>",
  "license": "",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "./dist/jest-bootstrap.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "23.1.3",
    "@types/lodash": "4.14.110",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "jest": "23.2.0",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "@types/i18next": "^8.4.3",
    "i18next": "^11.3.3",
    "inversify": "4.13.0",
    "inversify-binding-decorators": "4.0.0",
    "lodash": "4.17.10",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.2.1",
    "winston": "3.0.0"
  }
}
