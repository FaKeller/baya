{
  "name": "@baya/core",
  "version": "0.0.1",
  "description": "Static site generator framework featuring React",
  "directories": {
    "test": "jest"
  },
  "scripts": {
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "build": "npm run ts:build",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "ts:lint": "tslint -c tslint.json -p tsconfig.json",
    "depcruise": "depcruise --validate .dependency-cruiser.json src"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:mimacom/website/assemblyline.git"
  },
  "author": "Fabian Keller <fabian.keller@mimacom.com>",
  "license": "",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "./dist/jest-bootstrap.js"
    ]
  },
  "devDependencies": {
    "@types/i18next": "^8.4.3",
    "@types/jest": "23.1.3",
    "@types/lodash": "^4.14.116",
    "@types/markdown-it": "^0.0.5",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.0.6",
    "@types/strftime": "^0.9.2",
    "@types/winston": "^2.4.4",
    "jest": "23.2.0",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0"
  },
  "dependencies": {
    "i18next": "^11.3.3",
    "inversify": "4.13.0",
    "inversify-binding-decorators": "4.0.0",
    "inversify-inject-decorators": "^3.1.0",
    "lodash": "4.17.10",
    "markdown-it": "^8.4.2",
    "markdown-it-for-inline": "^0.1.1",
    "md5": "^2.2.1",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.3.1",
    "strftime": "^0.10.0",
    "winston": "3.0.0"
  }
}
